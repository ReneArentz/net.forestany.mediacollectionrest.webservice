{
	"$id": "https://example.com/define.schema.json",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"description": "MediaCollection JSON Small Schema",
  	"type": "object",
	"mapping": "net.forestany.mediacollectionrest.webservice.JSONMediaCollectionSmall",
	"properties": {
		"timestamp": {
			"type": "string",
			"mapping": "Timestamp"
		},
		"languages": {
			"type": "array",
			"mapping": "Languages:java.util.List",
			"items": {
				"LanguageRecordRef": {
					"type": "object",
					"mapping": "net.forestany.mediacollectionrest.webservice.LanguageRecord",
					"properties": {
						"id": {
							"type": "integer",
							"mapping": "ColumnId"
						},
						"language": {
							"type": "string",
							"mapping": "ColumnLanguage"
						}
					},
					"required": [
						"id",
						"language"
					]
				}
			},
			"minItems": 0
		},
		"records": {
			"type": "array",
			"mapping": "Records:java.util.List",
			"items": {
				"MediaCollectionRecordSmallRef": {
					"type": "object",
					"mapping": "net.forestany.mediacollectionrest.webservice.MediaCollectionRecordSmall",
					"properties": {
						"id": {
							"type": "integer",
							"mapping": "ColumnId"
						},
						"uuid": {
							"type": "string",
							"mapping": "ColumnUUID"
						},
						"publication_year": {
							"type": "integer",
							"mapping": "ColumnPublicationYear"
						},
						"original_title": {
							"type": "string",
							"mapping": "ColumnOriginalTitle"
						},
						"last_modified": {
							"type": "string",
							"mapping": "ColumnLastModified"
						},
						"deleted": {
							"type": "string",
							"mapping": "ColumnDeleted"
						},
						"poster": {
							"type": "string",
							"mapping": "ColumnPoster"
						}
					},
					"required": [
						"id",
						"uuid",
						"original_title",
						"publication_year"
					]
				}
			},
			"minItems": 0
		}
	},
	"required": [
		"timestamp",
		"records"
	]
}